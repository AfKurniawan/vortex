<?xml version="1.0" encoding="utf-8"?>

<com.balysv.materialripple.MaterialRippleLayout
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="#585858"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true"
    android:id="@+id/rlRecommendedEvent"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">




    <TextView
        android:id="@+id/tvEventTicketTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="00dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="4dp"
        android:gravity="left"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:text="200 Available"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEventTicketsExpiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventTicketTitle"
        android:layout_gravity="top"
        android:layout_marginBottom="00dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/ivRecommendedProfile"
        android:gravity="left"
        android:maxLines="4"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:text="Sat, 26 Sept"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tvEvent_details_ticket_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/rlEventBooking"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Ushs"
        android:textColor="@color/black"
        android:visibility="visible"/>


    <TextView
        android:layout_below="@+id/tvEvent_details_ticket_code"
        android:id="@+id/tvEvent_details_ticket_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_toLeftOf="@+id/rlEventBooking"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="60,000/="
        android:textColor="@color/black"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/rlEventBooking"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/timestamp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEventBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="00dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:text="BOOK"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTicketQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="00dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:text="NOW"
            android:textColor="#f9b38c"
            android:textSize="14dp" />

    </LinearLayout>
    </RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>